extends layout
block content
    #user
        img(src='#{user.picture}', height='40', width='40')
        &nbsp;
        span #{user.email} #{user.name}
        br
        br
    #menu
        a(onclick='changeSongList("/home")', href='#') Home
        span 
        input(type="text", name="search", id="search")
        #playing(style="float:right")
            #playingTitle(class="title") #{songArray[0].title}
            |  by 
            #playingArtist(class="artist") #{songArray[0].artist}
    #library
        .scrollbar
            .track
                .thumb
                    .end
        .viewport
            include songlist
    #audio
        audio(controls='controls', id='audioctr')
            source(src='/fetch/song/#{songArray[0].id}', type='audio/mpeg', id='aud_src')
